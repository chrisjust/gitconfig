[user]
	name = !--YourNameHere--!
	email = !--YourMailHere--!
# [includeIf "gitdir/i:C:/Code/"]
#   path = ./gitconfig/.gitconfig-override
[core]
	eol = =
	editor = winpty vim
	autocrlf = true
[alias]
    	rebasemaster = !git checkout master && git pull && git checkout - && git rebase -
    	logp = log --pretty=oneline --name-only
	last = log -1 HEAD --name-only
    	pushbranch = !git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)
	pushf = push --force-with-lease
	current = rev-parse --abbrev-ref HEAD
    	ai = add -i .
    	st = status
	pr = !git push && hub pull-request -o
    	prshow = !hub pr show
[diff]
    tool = kdiff3
[difftool "kdiff3"]
    path = kdiff3.exe
[difftool]
    prompt = false
    keepBackup = false
    trustExitCode = false
[merge]
    tool = kdiff3
